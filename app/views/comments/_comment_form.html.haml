.row
  .col-md-4.col-md-offset-4
    = form_for([@post, @post.comments.build],remote: true, html:{multipart: true}, authenticity_token: true) do |f|
      .form-group
        = f.label :body
        %br
        = f.text_area :body, class:"form-control"
      .form-group
        = f.label :file_upload
        %br
        = f.file_field :file_upload
      .form-group
        = f.submit class:"btn btn-primary"
