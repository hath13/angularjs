.row
  .col-md-4.col-md-offset-4
    = form_for @post do |f|
      - if @post.errors.any?
        = pluralize(@post.errors.count,"error")
        %ul
          - @post.errors.full_messages.each do |m|
            %li= m
      .form-group
        = f.label  :title
        %br
        = f.text_field :title,class:"form-control"
      .form-group
        = f.label t :text
        %br
        = f.text_area :text ,class:"form-control"
      .form-group
        = f.submit class:"btn btn-primary"
